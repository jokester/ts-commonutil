    "target": "es2017",
    "skipLibCheck": true,
    "sourceRoot": "src",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "coverage",
    "lib",
    "jest.config.js",
    "babel.config.js"
  ]
}
