{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "scripts",
    "coverage",
    "build",
    "__test__",
    "bin",
    "jest.config.js"
  ]
}
